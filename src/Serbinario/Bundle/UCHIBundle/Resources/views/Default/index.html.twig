{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('css/bootstrap_paperv3.3.2.min.css')}}" />  
    <link rel="stylesheet" href="{{asset('css/cs-login.css')}}" />
{% endblock %}

{% block body %}
    <body>
        <div class="container">
            <div class="row vertical-offset-100">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default" style="margin-top: -50px">
                        <div class="panel-heading">                                
                            <div class="row-fluid user-row">
                                    <center>
                                        <h3>UCHI</h3>
                                        {#<img src="{{asset('imagens/logo_mini.jpg')}}" width="200" style="margin-top: 20px;"/>#}
                                    </center>                               
                            </div>
                        </div>
                        <div class="panel-body">
                            <form accept-charset="UTF-8" role="form" class="form-signin" id="formulario" method="post" action="{{path('login')}}">
                                {% for label, flashes in app.session.flashbag.all %}
                                    {% for flash in flashes %}
                                        <div class="alert alert-dismissable alert-{{ label }}">
                                            <button type="button" class="close" data-dismiss="alert">×</button>
                                            {{ flash }}
                                        </div>
                                    {% endfor %}
                                {% endfor %}
                                <fieldset>
                                    <label class="panel-login">
                                        <div class="login_result"></div>
                                    </label>
                                    <input type="text" class="form-control" name="_username" id="_username" value="" placeholder="Login" required="" autofocus="" >
                                    <input type="password" class="form-control" name="_password" id="_password" placeholder="Senha" required="" >
                                    <br/><br/>                                       
                                    <input class="btn btn-lg btn-primary btn-block" type="submit" id="Logar" value="Entrar">
                                </fieldset>
                            </form>
                        </div>
                        <!--<center><p style="margin-top: 10px; font-size: 12px;">Desenvolcido por</p></center>-->
                        <!--<center><p style="margin-top: -6px;">&copy; Company <b>Serbinário</b></p></center>-->
                    </div>
                </div>
            </div>
        </div>
    </body>
</div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{asset('js/jquery.js')}}"></script>
    <!-- Include all JavaScripts, compiled by Assetic -->
    <script type="text/javascript" src="{{asset('js/bootstrap.js')}}"></script>
    <script type="text/javascript" src="{{asset('js/js-login.js')}}"></script>
    <script src="{{asset('js/TweenLite.min.js')}}"></script>
{% endblock %}
